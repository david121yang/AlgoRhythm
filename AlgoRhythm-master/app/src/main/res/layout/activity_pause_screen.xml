<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background">

    <ImageView
        android:id="@+id/tracklines2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/StartPoint"
        app:srcCompat="@drawable/tracklines" />

    <ImageView
        android:id="@+id/background"
        android:layout_width="348dp"
        android:layout_height="267dp"
        android:layout_marginStart="36dp"
        android:background="@color/transparentLightBlue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.577"
        app:srcCompat="@color/transparentBlue"
        tools:srcCompat="@color/transparentBlue" />

    <TextView
        android:id="@+id/tv_completeOrFailed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/orbitron"
        android:text="Paused"
        android:textAlignment="center"
        android:textColor="@color/design_default_color_on_primary"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/background" />

    <Button
        android:id="@+id/playAgainButton"
        android:layout_width="211dp"
        android:layout_height="47dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="64dp"
        android:background="@color/brightBlue"
        android:fontFamily="@font/orbitron"
        android:text="Restart"
        android:textColor="@color/design_default_color_on_primary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_completeOrFailed" />

    <Button
        android:id="@+id/songListButton"
        android:layout_width="202dp"
        android:layout_height="49dp"
        android:layout_marginBottom="184dp"
        android:background="@color/brightBlue"
        android:fontFamily="@font/orbitron"
        android:text="Song List"
        android:textColor="@color/design_default_color_on_primary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playAgainButton"
        app:layout_constraintVertical_bias="0.362" />

</androidx.constraintlayout.widget.ConstraintLayout>